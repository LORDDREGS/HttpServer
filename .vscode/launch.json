{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/SimpleHttpServer/build/Debug/outDebug",  
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/SimpleHttpServer",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",  // Путь к gdb
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",  
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
